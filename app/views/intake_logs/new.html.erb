<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <div>
        <h3>レシピから選択</h3>
      </div>

      <div>
        <table class="table table-hover table-bordered">
          <thead>
            <tr class="active">
              <th  class="col-xs-1">レシピ名</th>
              <th  class="col-xs-2">総カロリー</th>
              <th  class="col-xs-1">タンパク質量</th>
              <th  class="col-xs-1">脂質量</th>
              <th  class="col-xs-1">炭水化物量</th>
              <th  class="col-xs-2">PFCバランス</th>
              <th  class="col-xs-1">グラム</th>
              <th  class="col-xs-1"></th>
            </tr>
          </thead>
          <tbody>
            <% @recipes.each do |recipe| %>
            <%= form_with model: @intake_recipe, local: true do |f| %>
            <tr>
              <td class="p-center_v"><%= recipe.dish_name %></td>
              <td class="p-center_v"><%= recipe.total_calorie.round %></td>
              <td class="p-center_v"><%= recipe.protein_content.round %></td>
              <td class="p-center_v"><%= recipe.fat_content.round %></td>
              <td class="p-center_v"><%= recipe.carbohydrate_content.round %></td>
              <td class="p-center_v">
                <p><%= recipe.protein_ratio.round %>%</p>
                <p><%= recipe.fat_ratio.round %>%</p>
                <p><%= recipe.carbohydrate_ratio.round %>%</p>
              </td>
              <td class="p-center">
                <%= f.number_field :number, step: "0.1", min: "0.1", class: 'form-control' %>
              </td>
              <td class="p-center">
                <%= f.hidden_field :recipe_id, :value => recipe.id %>
                <%= f.submit '追加', :class => 'btn btn-primary col-xs-12' %>
              </td>
            </tr>
            <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="col-xs-6">
      <div>
        <h3>食材から選択</h3>
      </div>

      <div>
        <table class="table table-hover table-bordered">
          <thead>
            <tr class="active">
              <th  class="col-xs-1">食材名</th>
              <th  class="col-xs-2">総カロリー</th>
              <th  class="col-xs-1">タンパク質量</th>
              <th  class="col-xs-1">脂質量</th>
              <th  class="col-xs-1">炭水化物量</th>
              <th  class="col-xs-2">PFCバランス</th>
              <th  class="col-xs-1">グラム</th>
              <th  class="col-xs-1"></th>
            </tr>
          </thead>
          <tbody>
            <% @ingredients.each do |ingredient| %>
            <%= form_with model: @intake_ingredient, local: true do |f| %>
            <tr>
              <td class="p-center_v"><%= ingredient.name %></td>
              <td class="p-center_v"><%= ingredient.total_calorie.round %></td>
              <td class="p-center_v"><%= ingredient.protein_content.round %></td>
              <td class="p-center_v"><%= ingredient.fat_content.round %></td>
              <td class="p-center_v"><%= ingredient.carbohydrate_content.round %></td>
              <td class="p-center_v">
                <p><%= ingredient.protein_ratio.round %>%</p>
                <p><%= ingredient.fat_ratio.round %>%</p>
                <p><%= ingredient.carbohydrate_ratio.round %>%</p>
              </td>
              <td class="p-center">
                <%= f.number_field :weight, step: "0.1", min: "0", class: 'form-control' %>
              </td>
              <td class="p-center">
                <%= f.hidden_field :ingredient_id, :value => ingredient.id %>
                <%= f.submit '追加', :class => 'btn btn-primary col-xs-12' %>
              </td>
            </tr>
            <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>