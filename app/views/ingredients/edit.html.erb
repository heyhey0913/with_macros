<div class="container">
  <div class="row">
    <h2>食材 / 編集</h2>
    <%= form_with model: @ingredient do |f| %>
    <div class="form-group">
      <h3>食材の名前</h3>
      <%= @ingredient.name %>
    </div>
    <h2>100gあたり</h2>
    <div class="form-group">
      <%= f.label :protein_content %>
      <%= f.number_field :protein_content, step: "0.1", min: "0", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :fat_content %>
      <%= f.number_field :fat_content, step: "0.1", min: "0", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :carbohydrate_content %>
      <%= f.number_field :carbohydrate_content, step: "0.1", min: "0", class: 'form-control' %>
    </div>
    <div class="actions row">
      <%= f.submit '食材の情報を更新', :class => 'btn btn-primary col-xs-12' %>
    </div>
    <% end %>
    <h2>総カロリー</h2>
    <div class="row">
      <p>総カロリー</p>
      <div id="calculated_total_calorie"></div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'ingredients.js' %>