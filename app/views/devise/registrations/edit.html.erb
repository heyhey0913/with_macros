<div class="progress_log_edit">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="one-box">
    <p class="box-title">ユーザー情報 / 編集</p>


    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label "ニックネーム", class: "col-xs-2 control-label　text-left" %>
          <%= f.text_field :nickname, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "ユーザーID", class: "col-xs-2 control-label　text-left" %>
          <%= f.text_field :optional_id, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "メールアドレス", class: "col-xs-2 control-labeltext-left" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>

    <div class="form-group">
      <%= attachment_image_tag current_user, :profile_image, :fill, 200, 200, class: "rounded-circle pull-left profile-img", fallback: "no_image.jpeg", size:'200x200' %><br>
          <%= f.attachment_field :profile_image %>
    </div>

    <div class="ec-edit-registration-btn-wrap col-xs-offset-1 col-xs-10", style= "padding-left: 0px">
        <%= f.submit "編集内容を保存する", class:"btn btn-outline-dark", style: "width: 12em" %>
    </div>
  </div>
    <% end %>
    <%= link_to "退会する" ,leave_path, class: "btn" %>
</div>