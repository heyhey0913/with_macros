<div class="progress_log_edit">
    <%= form_with model: @progress_log do |f| %>
  <div class="one-box">
      <p class="box-title">プログレス / 編集</p>
    <div class="row">
      <%= f.label :weight %>
      <%= f.number_field :weight, step: "0.1", min: "0", class: 'form-control' %>
    </div>
    <div class="row">
      <%= f.label :body_fat %>
      <%= f.number_field :body_fat, step: "0.1", min: "0", class: 'form-control' %>
    </div>
    <div class="row">
      <%= @progress_log.recorded_on.strftime('%Y/%m/%d') %>
    </div>
    <div class="form-group">
      <%= f.label "身体画像を変更", class: "col-xs-2 control-labeltext-left" %>
      <div class="row">
        <div class="col-xs-2">
          <%= f.attachment_field :body_image %>
        </div>
      </div>
    </div>
  </div>
    <div>
      <%= f.submit '更新', :class => 'btn btn-outline-dark col-xs-12' , :id => 'next'%>
    </div>
    <% end %>
  <%= link_to "プログレスを削除する",progress_log_path(@progress_log),method: :delete,data: { confirm: 'このプログレスを削除しますか?' } %>
</div>