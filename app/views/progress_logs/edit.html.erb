<div class="container">
  <div class="row">
    <h2>経過記録 / 編集</h2>
    <%= form_with model: @progress_log do |f| %>
    <div class="row">
      <%= f.label :weight %>
      <%= f.number_field :weight, step: "0.1", min: "0", class: 'form-control' %>
    </div>
    <div class="row">
      <%= f.label :body_fat %>
      <%= f.number_field :body_fat, step: "0.1", min: "0", class: 'form-control' %>
    </div>
    <div class="row">
      <%= f.label :recorded_on %>
      <%= f.date_field :recorded_on, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label "身体画像を変更", class: "col-xs-2 control-labeltext-left" %>
      <div class="row">
        <div class="col-xs-2">
          <%= f.attachment_field :body_image %>
        </div>
      </div>
    </div>
    <div class="actions row">
      <%= f.submit '経過記録を更新', :class => 'btn btn-primary col-xs-12' %>
    </div>
    <% end %>
  </div>
  <%= link_to "経過記録を削除する",progress_log_path(@progress_log),method: :delete,data: { confirm: 'この経過記録を削除しますか?' },class: "btn btn-danger col-xs-offset-3 col-xs-6" %>
</div>