<div class="recipes_show">
  <div class="grid">
    <div class="add-intake-box">
      <p class="box-title">カロリーログに追加</p>
      <%= form_with url: create_intake_recipe_path, local: true do |f| %>
        <%= f.number_field :number, step: "0.1", min: "0.1", value: "1.0", class: 'form-control' %>人前
        <%= f.date_field :recorded_on, value: Date.today, class: 'form-control' %>
        <%= f.hidden_field :recipe_id, :value => @recipe.id %>
        <%= f.submit '追加', :class => 'btn btn-outline-dark col-xs-12' %>
      <% end %>
    </div>

    <div class="recipe-info-box">
      <p class="box-title"><%= @recipe.dish_name %>のレシピ</p>
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="item-image">
              <%= attachment_image_tag @recipe, :dish_image, class: "img-square", fallback: "no_image.jpeg", size:"200x200" %>
            </div>
          </div>

          <div class="col-md-6">
            <p>食材</p>
            <table class="table table-hover table-bingrediented">
              <thead>
                <tr class="active">
                  <th  class="col-xs-1">食材名</th>
                  <th  class="col-xs-2">グラム</th>
                </tr>
              </thead>
              <tbody>
                <% @recipe.recipe_ingredients.each do |recipe_ingredient| %>
                <tr>
                  <td class="p-center_v"><%= recipe_ingredient.ingredient.name %></td>
                  <td class="p-center_v"><%= recipe_ingredient.weight %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
        <div>
      <p class="box-title">作り方</p>
          <%= @recipe.method %>
        </div>
    </div>

    <div class="calorie-info-box">
      <p class="box-title">1食分のカロリー成分</p>
    </div>


  </div>
</div>